{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "es2015",
    "baseUrl": ".",
    "paths": {
      "@books/*": ["./src/app/books/*"],
      "@products/*": ["./src/app/products/*"],
      "@config": ["./src/app/config"],
      "@book-store/shared/*": ["../../libs/shared/src/*"],
      "@book-store/shared": ["../../libs/shared/src"]
    }
  },
  "exclude": ["jest.config.ts", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["**/*.ts"]
}
